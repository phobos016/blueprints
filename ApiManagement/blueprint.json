{
    "properties": {
        "description": "Apim Management Test Blueprint",
        "targetScope": "subscription",
        "parameters": { 
            "projectName": {
                "type": "string",
                "minLength": 1,
                "maxLength": 25
            },
            "environmentName": {
                "type": "string",
                "allowedValues": [
                    "dev",
                    "qa",
                    "prod"
                ],
                "defaultValue": "dev"
            },
            "publisherEmail": {
                "type": "string",
                "minLength": 1,
                "metadata": {
                    "description": "The email address of the owner of the service"
                },
                "defaultValue":"paul@phobos-software.net"
            },
            "publisherName": {
                "type": "string",
                "minLength": 1,
                "metadata": {
                    "description": "The name of the owner of the service"
                },
                "defaultValue":"Paul Sheridan"
            },
            "sku": {
                "type": "string",
                "allowedValues": [
                    "Developer",
                    "Standard",
                    "Premium"
                ],
                "defaultValue": "Developer"
            },
            "skuCount": {
                "type": "int",
                "defaultValue": 1,
                "metadata": {
                    "description": "The instance size of this API Management service."
                }
            }
        },
        "resourceGroups": {
            "ApimRG": {
                "description": "Apim Resource Group",
                "name":"[concat(parameters('projectName'), '-', parameters('environmentName'))]"
            }
        }
    },
    "type": "Microsoft.Blueprint/blueprints" 
}